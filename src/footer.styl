footer
  width 100%
  background-color black

.footer__content
  width 960px
  margin 0 auto
  display grid
  grid-template-columns repeat(12, 1fr)
  padding 100px 0

.footer__title
  color white
  font-size 18px
  margin-top 0

.footer__description
  font-size 15px
  font-family Regular
  color white
  opacity 0.6
  margin 0
  text-decoration none
  line-height 1.75

.footer__info
  grid-column 1 / span 3

.footer__contacts
  grid-column: 5 / span 2

.footer__links
  grid-column: 8 / span 2
  display grid
  grid-template-columns 1fr 1fr

.footer__socials
  grid-column 11 / span 2
  display flex
  flex-direction column