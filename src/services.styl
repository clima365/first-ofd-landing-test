.services
  width 100%
  background-color rgb(233, 233, 233)

.services__content
  width 960px
  margin 0 auto
  display grid
  grid-template-columns repeat(4, 1fr)
  grid-gap 32px
  padding 50px 0

.services__item
  display flex
  flex-direction column
  align-items center

.services__logo
  height 48px

.services__title
  text-transform uppercase
  font-size 12px
  margin 1rem 0
  line-height 3

.services__description
  font-family Regular
  font-size 16px
  color #787878
  text-align center
  margin 0