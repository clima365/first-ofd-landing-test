.numbers
  width 100%
  background-color rgb(16, 201, 195)

.numbers__content
  width 960px
  margin 0 auto
  display grid
  grid-template-columns repeat(4, 1fr)
  grid-gap 16px
  padding 50px 0

.numbers__item
  display flex

.numbers__icon
  width 48px
  margin-right 16px

.numbers__title
  font-size 18px
  line-height 30px
  text-transform uppercase
  color white
  margin 0

.numbers__subtitle
  font-size 12px
  line-height 30px
  text-transform uppercase
  color white
  margin 0